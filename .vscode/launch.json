{
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            // 1. Set CWD to the folder containing main.py
            "cwd": "${fileDirname}", 
            "env": {
                // 2. Add project root to python path so 'import utils' works
                "PYTHONPATH": "${workspaceFolder}" 
            }
        }
    ]
}